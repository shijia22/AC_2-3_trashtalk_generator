  <form action='/' method='POST'>
    <div class='d-flex flex-row justify-content-center p-3'>
      <div class='card m-2' style='width: 18rem;'>
        <img
          src='https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5668/angry-developer.jpg'
          class='card-img-top'
          alt='工程師'
        />
        <div class='card-body m-2'>

          <input type='radio' name='engineer' id='engineer' value='engineer' />
          <label for='engineer'>
            工程師
          </label>
        </div>
      </div>

      <div class='card m-2' style='width: 18rem;'>
        <img
          src='https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5667/angry-designer.jpg'
          class='card-img-top'
          alt='設計師'
        />
        <div class='card-body m-2'>

          <input type='radio' name='designer' id='designer' value='designer' />
          <label for='designer'>
            設計師
          </label>
        </div>
      </div>

      <div class='card m-2' style='width: 18rem;'>
        <img
          src='https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5669/angry-founder.jpg'
          class='card-img-top'
          alt='創業家'
        />
        <div class='card-body m-2'>

          <input
            type='radio'
            name='entrepreneur'
            id='entrepreneur'
            value='entrepreneur'
          />
          <label for='entrepreneur'>
            創業家
          </label>
        </div>
      </div>

    </div>

    <div class='form-group d-flex align-items-center p-3'>
      <button type='submit' class='btn btn-primary mb-2'>產生幹話</button>
      <textarea
        class='form-control'
        id='exampleFormControlTextarea1'
        rows='3'
      ></textarea>
    </div>

  </form>
